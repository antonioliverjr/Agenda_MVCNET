@using ReflectionIT.Mvc.Paging
@model PagingList<Contato>
@addTagHelper *, ReflectionIT.Mvc.Paging


@{
    ViewData["Title"] = "Inicial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lista de Contatos</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-info">Novo Contato</a>
</p>
<table class="table table-striped table-dark text-center">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Data de Criação
            </th>
            <th>
                Ativo
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_criacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ativo)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-success" title="Detalhes do Cadastro">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-info" title="Editar Cadastro">Edit</a> |
                    <a href="#" class="btn btn-sm btn-danger j_delete_confirm" data-id="@item.id" title="Deletar Cadastro">Del</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div class="d-flex justify-content-between">
    <vc:pager paging-list="@Model"></vc:pager>
    <span>Total de Registros: @Model.TotalRecordCount</span>
</div>

<div id="modal-delete"></div>

@section Scripts {
    <script>
        $(function () {
            $(".j_delete_confirm").on("click", function (e) {
                e.preventDefault()
                var id = $(this).data("id")
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Delete", "Contato")' + "/" + id,
                    success: (function (data) {
                        $("#modal-delete").html(data)
                        $("#_delete-modal-page").modal()
                    })
                })
            })
        })
    </script>
}