@model Agenda_AspNet.Models.Contato

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alterar</h1>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="data_criacao" />
            <div class="form-group row">
                <div class="form-group col-md-4">
                    <label asp-for="nome" class="control-label"></label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="sobrenome" class="control-label"></label>
                    <input asp-for="sobrenome" class="form-control" />
                    <span asp-validation-for="sobrenome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="telefone" class="control-label"></label>
                    <input asp-for="telefone" class="form-control" />
                    <span asp-validation-for="telefone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-group col-md-4">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="categoria_id" class="control-label"></label>
                    <select asp-for="categoria_id" class="form-control" asp-items="@ViewBag.categoria_id">
                        <option value="" disabled selected>Informe uma categoria</option>
                    </select>
                    <span asp-validation-for="categoria_id" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label name="foto_input" class="control-label">Foto do Perfil</label>
                    <input type="file" name="foto_input" class="form-control" accept=".jpg, .png, .jpeg" />
                    <span asp-validation-for="foto" class="text-danger"></span>
                    <input type="hidden" asp-for="foto" />
                </div>
                
            </div>
            <div class="form-group col-md-12">
                <label asp-for="descricao" class="control-label"></label>
                <textarea asp-for="descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group row col-sm-8">
                <div class="form-group form-check m-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ativo" /> @Html.DisplayNameFor(model => model.ativo)
                    </label>
                </div>
                <div class="form-group m-2">
                    <input type="submit" value="Salvar" class="btn btn-sm btn-outline-success" />
                </div>
                <div class="form-group m-2">
                    <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar para Lista</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
