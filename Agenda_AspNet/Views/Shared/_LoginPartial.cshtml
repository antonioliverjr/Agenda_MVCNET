<ul class="navbar-nav">
@if (Context.User.Identity.IsAuthenticated)
{
    <li class="nav-link m-auto">
        <strong class="nav-link text-info">Seja bem vindo - @Context.User.Identity.Name</strong>
    </li>
    <li class="nav-link m-auto">
        <a asp-controller="Account" asp-action="Logout" class="nav-link btn btn-sm btn-warning">Sair <i class="fas fa-sign-out-alt"></i></a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-controller="Account" asp-action="Register"><i class="fas fa-id-badge"></i> Registrar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-controller="Account" asp-action="Login">Logar <i class="fas fa-sign-in-alt"></i></a>
    </li>
}
</ul>
