@model Agenda_AspNet.Models.ViewModel.LoginModelView

@{ 
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container float-md-right">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" asp-action="Login" method="post">
                    <h4>Informe seus dados para Login.</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <i class="fas fa-user-circle"></i> <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-key"></i> <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-md-between">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                            <p><a asp-controller="Account" asp-action="Register" class="text-success"><i class="fas fa-id-badge"> Novo Usuário</i></a></p>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Login <i class="fas fa-sign-in-alt"></i></button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>